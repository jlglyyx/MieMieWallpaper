<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_6"
    android:layout_height="wrap_content">

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/stv_order"
        android:layout_width="@dimen/dp_23"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/orchid"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stv_tv"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stv_tv"
        app:shape_radius="@dimen/dp_50"
        app:shape_solidColor="@color/grey_0a" />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/stv_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_6"
        android:paddingVertical="@dimen/dp_4"
        android:textColor="@color/textColor_666666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stv_order"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
