<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    app:shape_strokeColor="@color/colorBar"
    app:shape_strokeWidth="@dimen/dp_3"
    app:shape_radius="@dimen/dp_5"
    android:padding="@dimen/dp_2"
    app:shape_strokeDisabledColor="@color/white"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_38"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/radiusShapeImage_5"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        app:layout_constraintStart_toStartOf="@+id/iv_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        android:textColor="@color/white"
        android:textSize="12sp"

        android:text="明日方舟"
        />

</com.hjq.shape.layout.ShapeConstraintLayout>