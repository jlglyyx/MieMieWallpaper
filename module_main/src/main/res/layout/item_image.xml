<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_10">

    <com.hjq.shape.view.ShapeImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/stv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="原创"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        app:shape_startColor="@color/darkgoldenrod"
        app:shape_endColor="@color/lightyellow"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_1"
        app:shape_bottomLeftRadius="@dimen/dp_8"
        app:shape_topLeftRadius="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_image"
        />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:src="@drawable/iv_collection"
        app:tint="@color/white"
        android:layout_marginEnd="@dimen/dp_2"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_like_num"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_like_num"
        app:layout_constraintTop_toTopOf="@+id/iv_star"
        app:layout_constraintBottom_toBottomOf="@+id/iv_star"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/dp_10"
        tools:text="1000"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_star"
        tools:text="4K纯高清"
        android:textColor="@color/white"
        android:id="@+id/tv_title"
        android:textStyle="bold"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_16"
        android:layout_marginHorizontal="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        android:layout_marginBottom="@dimen/dp_6"
        />

</androidx.constraintlayout.widget.ConstraintLayout>