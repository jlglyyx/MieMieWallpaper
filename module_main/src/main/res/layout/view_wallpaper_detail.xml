<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/iv_image"/>

    <com.hjq.shape.view.ShapeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:shape_solidColor="@color/appColor"
        app:shape_radius="@dimen/dp_20"
        android:text="设为壁纸"
        android:elevation="@dimen/dp_10"
        android:textSize="@dimen/sp_20"
        android:paddingHorizontal="@dimen/dp_50"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:id="@+id/stv_set_wallpaper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent">
        <com.yang.lib_common.widget.ItemImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemTitle="888"
            android:id="@+id/iiv_like_num"
            app:itemImgSrc="@drawable/iv_collection"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"/>
        <com.yang.lib_common.widget.ItemImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemTitle="分享"
            android:id="@+id/iiv_share"
            app:itemImgSrc="@drawable/iv_forward"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"/>
        <com.yang.lib_common.widget.ItemImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemTitle="下载"
            android:id="@+id/iiv_down"
            app:itemImgSrc="@drawable/iv_down"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"/>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>