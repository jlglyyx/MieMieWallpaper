<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cl_container"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">
    <com.yang.lib_common.widget.EmptyControlVideo
        android:id="@+id/detailPlayer"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="match_parent" />
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@color/black"
        android:scaleType="fitXY" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_control"
        android:layout_height="match_parent">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:22"
            android:textColor="@color/white10"
            android:textSize="@dimen/sp_65"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="今天也是元气满满的一天"
            android:textColor="@color/white10"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_2"
            app:cardBackgroundColor="@color/colorBar"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stv_set_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_50"
            android:paddingVertical="@dimen/dp_10"
            android:text="设为壁纸"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"/>
<!--        <com.hjq.shape.view.ShapeButton-->
<!--            android:id="@+id/stv_set_wallpaper"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="@dimen/dp_15"-->
<!--            android:elevation="@dimen/dp_10"-->
<!--            android:paddingHorizontal="@dimen/dp_50"-->
<!--            android:paddingVertical="@dimen/dp_10"-->
<!--            android:text="设为壁纸"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/sp_20"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:shape_radius="@dimen/dp_20"-->
<!--            app:shape_solidColor="@color/appColor" />-->
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.yang.lib_common.widget.ItemImageView
                android:id="@+id/iiv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:itemImgSrc="@drawable/iv_collection"
                app:itemTitle="888" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />

            <com.yang.lib_common.widget.ItemImageView
                android:id="@+id/iiv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:itemImgSrc="@drawable/iv_forward"
                app:itemTitle="分享" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />

            <com.yang.lib_common.widget.ItemImageView
                android:id="@+id/iiv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:itemImgSrc="@drawable/iv_down"
                app:itemTitle="下载" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>