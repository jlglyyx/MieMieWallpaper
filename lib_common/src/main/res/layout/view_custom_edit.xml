<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="@color/white"
    android:id="@+id/ll_container"
    android:paddingHorizontal="@dimen/dp_2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_4"
        android:src="@drawable/iv_normal_application"
        app:tint="@color/textColor_999999" />
    <com.hjq.shape.view.ShapeEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:hint="11111111"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        android:paddingVertical="@dimen/dp_13"
        android:paddingHorizontal="@dimen/dp_3"
        android:id="@+id/set_input"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.hjq.shape.view.ShapeImageView
            android:layout_width="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_8"
            android:id="@+id/siv_clear"
            android:visibility="gone"
            android:tint="@color/textColor_999999"
            android:src="@drawable/iv_x"/>

        <com.hjq.shape.view.ShapeImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv_right"
            android:visibility="gone"
            android:tint="@color/textColor_999999"
            android:src="@drawable/iv_password_gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.hjq.shape.layout.ShapeLinearLayout>