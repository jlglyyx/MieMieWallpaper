<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:src="@drawable/iv_normal_application"
            app:tint="@color/appColor" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="7"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_15"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_rightContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_16"
            android:singleLine="true"
            android:textColor="@color/textColor_666666"
            android:text="1111111"
            android:textSize="@dimen/sp_15" />
        <ImageButton
            android:id="@+id/ib_red"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_5"
            app:shape_radius="@dimen/dp_30"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@drawable/shape_circle_red_bg"
            />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_2"
            android:src="@drawable/iv_into" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:background="@color/grey_1f" />
</LinearLayout>