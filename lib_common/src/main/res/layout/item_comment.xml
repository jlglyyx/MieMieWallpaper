<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/dp_2"
    android:paddingTop="@dimen/dp_2"
    android:paddingHorizontal="@dimen/dp_5"
    android:background="@drawable/shape_ripple_button"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_attr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/siv_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/siv_img"
        tools:text="张三"
        android:id="@+id/tv_name"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_5"
        android:textColor="@color/textColor_999999"
        app:layout_constraintBottom_toBottomOf="@+id/siv_img"
        app:layout_constraintLeft_toRightOf="@+id/siv_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/siv_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:id="@+id/ll_sq"
        android:paddingEnd="@dimen/dp_5"
        android:paddingStart="@dimen/dp_5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/siv_img"
            android:text="收起"
            android:layout_marginEnd="@dimen/dp_2"
            android:textSize="@dimen/sp_13"
            android:padding="@dimen/dp_5"
            android:textColor="@color/textColor_999999"/>

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_up_to"
            app:tint="@color/textColor_999999"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看这电影真好看"
        android:id="@+id/tv_comment"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/textColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siv_img"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2021.06.21 18:20.20"
        android:id="@+id/tv_time"
        android:textSize="@dimen/sp_11"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/textColor_999999"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment"
        app:layout_constraintStart_toStartOf="@+id/tv_comment"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="回复"
        android:gravity="center"
        android:id="@+id/tv_reply"
        android:textSize="@dimen/sp_10"
        android:padding="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_6"
        android:textColor="@color/textColor_999999"
        app:layout_constraintStart_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="-----展开20条评论-----"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:padding="@dimen/dp_10"
        android:id="@+id/tv_open_comment"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/textColor_999999"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply"/>

</androidx.constraintlayout.widget.ConstraintLayout>