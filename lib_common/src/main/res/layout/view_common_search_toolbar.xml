<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:id="@+id/ll_container"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_10"
    android:layout_height="@dimen/dp_80">

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_10"
        android:id="@+id/iv_back"
        android:src="@drawable/iv_back"/>


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content">

<!--      <com.yang.lib_common.widget.AutoScrollListView-->
<!--          android:layout_width="0dp"-->
<!--          app:layout_constraintTop_toTopOf="@+id/et_search"-->
<!--          app:layout_constraintBottom_toBottomOf="@+id/et_search"-->
<!--          app:layout_constraintEnd_toEndOf="@+id/et_search"-->
<!--          app:layout_constraintStart_toStartOf="@+id/et_search"-->
<!--          android:layout_marginHorizontal="@dimen/dp_40"-->
<!--          android:layout_height="0dp">-->
<!--      </com.yang.lib_common.widget.AutoScrollListView>-->

    <com.hjq.shape.view.ShapeEditText
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="@null"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="请输入搜索内容"
        android:textSize="@dimen/sp_16"
        android:id="@+id/et_search"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_40"
        app:shape_radius="@dimen/dp_20"
        android:imeOptions="actionSearch"
        app:shape_solidColor="@color/grey_1f"
        android:layout_height="40dp"/>

      <com.hjq.shape.view.ShapeImageView
          android:layout_width="@dimen/dp_40"
          android:layout_height="@dimen/dp_40"
          android:padding="@dimen/dp_10"
          android:tint="@color/textColor_999999"
          app:layout_constraintStart_toStartOf="@+id/et_search"
          app:layout_constraintTop_toTopOf="@+id/et_search"
          app:layout_constraintBottom_toBottomOf="@+id/et_search"
          android:src="@drawable/iv_search"/>

      <com.hjq.shape.view.ShapeImageView
          android:layout_width="@dimen/dp_20"
          android:layout_height="@dimen/dp_20"
          android:padding="@dimen/dp_5"
          app:shape_solidColor="@color/grey_1f"
          app:shape_radius="@dimen/dp_30"
          android:id="@+id/siv_clear"
          android:visibility="gone"
          android:tint="@color/textColor_999999"
          android:layout_marginEnd="@dimen/dp_10"
          app:layout_constraintEnd_toEndOf="@+id/et_search"
          app:layout_constraintTop_toTopOf="@+id/et_search"
          app:layout_constraintBottom_toBottomOf="@+id/et_search"
          android:src="@drawable/iv_x"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:id="@+id/iv_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/iv_add"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_right"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_16"
            android:paddingEnd="@dimen/dp_15"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>