<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yang.lib_common.widget.CommonToolBar
        android:id="@+id/commonToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerContent="修改资料"
        app:rightContent="确认修改"
        app:rightContentVisible="true" />

    <com.yang.lib_common.widget.DampScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:id="@+id/ll_image"
                android:layout_marginVertical="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="头像"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_17" />
                <ImageView
                    android:id="@+id/siv_image"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_46"
                    android:padding="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circleShapeImage"
                    android:src="@drawable/iv_image_error" />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_2"
                    android:padding="@dimen/dp_7"
                    android:src="@drawable/iv_into" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:id="@+id/ll_sex"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="性别"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_17" />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/textColor_666666"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:textSize="@dimen/sp_15"
                    android:text="女"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_2"
                    android:padding="@dimen/dp_7"
                    android:src="@drawable/iv_into" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:background="@color/grey_1f" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="昵称"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_17" />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="嚣张的王老五"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:textColor="@color/textColor_666666"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:background="@color/grey_1f" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="个性签名"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_17" />
                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="个性签名在此~"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:textColor="@color/textColor_666666"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="20"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:background="@color/grey_1f" />
        </LinearLayout>

    </com.yang.lib_common.widget.DampScrollView>
</LinearLayout>