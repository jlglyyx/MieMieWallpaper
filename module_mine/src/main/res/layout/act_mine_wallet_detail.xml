<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yang.lib_common.widget.CommonToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerContent="钱包明细"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/grey_1f"
        android:dividerPadding="@dimen/dp_6"
        android:showDividers="middle"
        android:id="@+id/ll_container"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_all"
            android:background="@drawable/shape_ripple_button"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="全部"
                android:padding="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/tv_all"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content"/>
            <ImageView
                app:tint="@color/textColor"
                android:id="@+id/iv_all"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/iv_down_to"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/shape_ripple_button"
            android:id="@+id/ll_filter"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="筛选"
                android:layout_width="wrap_content"
                android:id="@+id/tv_filter"
                android:padding="@dimen/dp_12"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content"/>
            <ImageView
                app:tint="@color/textColor"
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/iv_down_to"/>

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_normal_recyclerview"
        android:id="@+id/refresh_recyclerview"/>

</LinearLayout>